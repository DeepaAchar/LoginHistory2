<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_registration"
    tools:context="com.example.deepa.loginhistory.RegistrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name"
        android:id="@+id/textViewUNameReg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUNameLog"
        android:layout_alignBottom="@+id/textViewUNameReg"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewUNameReg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textViewUPasswdReg"
        android:layout_alignBottom="@+id/editTextPwdLog"
        android:layout_toStartOf="@+id/editTextPwdLog" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPwdLog"
        android:layout_below="@+id/editTextUNameLog"
        android:layout_alignEnd="@+id/editTextUNameLog"
        android:layout_toEndOf="@+id/textViewUNameReg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Password"
        android:id="@+id/textViewUConPwdReg"
        android:layout_below="@+id/editTextPwdLog"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConPwdReg"
        android:layout_alignBottom="@+id/textViewUConPwdReg"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewUConPwdReg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now..."
        android:id="@+id/buttonRegNow"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textViewUConPwdReg" />
</RelativeLayout>
